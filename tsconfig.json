{
  "compilerOptions": {
    "outDir": "./build",
    "module": "esnext",
    "lib": ["esnext","dom"],
    "target": "es2017",
    "moduleResolution": "Node",
    //"sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    //"typeRoots": ["./node_modules/@types", "./@types", "./node_modules/@types/screeps-arena/dist"]
  },
  "exclude": ["node_modules", "typings"],
  "include": ["src"]
}

